import axios from "axios";

export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Method Not Allowed" });
  }

  const { question } = req.body;
  if (!question) return res.status(400).json({ error: "No question provided" });

  try {
    // Call BetaDash GPT-5 API
    const apiUrl = "https://betadash-api-swordslush-production.up.railway.app/gpt-5?ask=" + encodeURIComponent(question);
    const gptRes = await axios.get(apiUrl);
    const answer = gptRes.data?.response || "⚠️ No response from GPT.";

    return res.status(200).json({ answer });
  } catch (err) {
    console.error("Error fetching GPT response:", err.message);
    return res.status(500).json({ error: "Failed to fetch GPT response" });
  }
}